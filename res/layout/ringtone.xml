<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
 <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent" 
    android:background="@drawable/thomson"
    android:layout_height="40dp">    
    
        <Button
            android:id="@+id/btnBack"
            android:layout_width="27dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_back" />

       

    
    
</LinearLayout>

<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  
    android:id="@+id/menu_set_ring_tone"  >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  
    android:background="#F5F5F5"  >
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF" >

<LinearLayout   
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content" 
	android:orientation="horizontal"
	android:layout_marginRight="10dp"
	android:layout_marginLeft="10dp"
	android:background="@drawable/layoutform" > 	

    <ImageView
    android:id="@+id/submenu_pic"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="#00000000"
    android:layout_weight="1"
    android:src="@drawable/app_set_tone" />

    <TextView 
    android:id="@+id/text_display"  
    android:layout_width="140dp"  
    android:layout_height="50dp" 
    android:layout_gravity="center_vertical" 
    android:gravity="center_vertical" 
    android:layout_weight="1"
    android:text="@string/Ring___Tone"
    android:textSize="20sp"/>
    
    <ImageView
    android:id="@+id/mainmenu_return_but"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:background="#00000000"
    android:layout_weight="1"
    android:layout_gravity="center_vertical"
    android:src="@drawable/back_icon" />"
    
    </LinearLayout>
<LinearLayout   
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_gravity="center_horizontal" 
    android:gravity="center_horizontal"
	android:background="#00000000" >
    
    <Button
    android:id="@+id/set_enable"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:background="@drawable/btn_red2"
    android:text="@string/Set"
    android:textColor="#FFFFFF" />
    
    <Button
    android:id="@+id/get_disable"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:background="@drawable/buttonform2"
    android:text="@string/Get"
    android:textColor="#162982" />
    
</LinearLayout>
<ImageView 
    android:layout_width="fill_parent"  
    android:layout_height="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/top_header_line"/>	
<LinearLayout   
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="20dp"
	android:background="#00000000" >
    
    <TextView 
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content" 
    android:textSize="20dp"
	android:text="@string/_Ring_Scene_Setup"/>
        
<RadioGroup 
	android:id="@+id/group1" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:orientation="vertical"> 
<LinearLayout   
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	<RadioButton
	android:id="@+id/ring_only"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:button="@drawable/rdo_radio1"
    android:checked="true"
    android:text="@string/Ring_Only" />
	
	<RadioButton
	android:id="@+id/vibration"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:button="@drawable/rdo_radio1"
    android:text="@string/Vibration" />
</LinearLayout>
		
<LinearLayout   
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:orientation="horizontal">

<RadioButton
	android:id="@+id/ring_vibration"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:button="@drawable/rdo_radio1"
    android:text="@string/Ring_Vibration"/>
	
	<RadioButton
	android:id="@+id/mute"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:button="@drawable/rdo_radio1"
    android:text="@string/Mute" />
	
</LinearLayout>

</RadioGroup>
	

	
	<ImageView   
    android:layout_width="fill_parent"  
    android:layout_height="1dp"  
    android:layout_marginTop="5dp"
    android:background="#C0C0C0"/>
	
	<TextView 
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content" 
    android:textSize="20dp"
    android:layout_marginTop="10dp"
	android:text="@string/_Ring_Type_Setup"/>

<RadioGroup   
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_marginTop="10dp"
	android:background="#00000000" >

	<RadioButton
	android:id="@+id/ring_type1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    android:button="@null"
    android:background="@drawable/radio2"
    android:checked="true"
    android:gravity="center"
    android:layout_weight="1"
    android:textColor="@color/radio2_textcolor"
    android:text="1"/>
	
	<RadioButton
	android:id="@+id/ring_type2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:button="@null"
    android:layout_marginLeft="10dp"
    android:background="@drawable/radio2"
    android:gravity="center"
    android:layout_weight="1"
    android:textColor="@color/radio2_textcolor"
    android:text="2" />
	
	<RadioButton
	android:id="@+id/ring_type3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:button="@null"
    android:layout_marginLeft="10dp"
    android:background="@drawable/radio2"
    android:gravity="center"
    android:textColor="@color/radio2_textcolor"
    android:layout_weight="1"
    android:text="3" />
	
	<RadioButton
	android:id="@+id/ring_type4"
    android:layout_width="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    android:button="@null"
    android:background="@drawable/radio2"
    android:textColor="@color/radio2_textcolor"
    android:gravity="center"
    android:layout_weight="1"
    android:text="4" />
	
	<RadioButton
	android:id="@+id/ring_type5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:button="@null"
    android:layout_marginLeft="10dp"
    android:background="@drawable/radio2"
    android:gravity="center"
    android:textColor="@color/radio2_textcolor"
    android:layout_weight="1"
    android:text="5" />
	
	<RadioButton
	android:id="@+id/ring_type6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:button="@null"
    android:background="@drawable/radio2"
    android:gravity="center"
    android:textColor="@color/radio2_textcolor"
    android:layout_weight="1"
    android:text="6" />
	
	<RadioButton
	android:id="@+id/ring_type7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:button="@null"
    android:textColor="@color/radio2_textcolor"
    android:background="@drawable/radio2"
    android:gravity="center"
    android:layout_weight="1"
    android:text="7" />
		
	<RadioButton
	android:id="@+id/ring_type8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:button="@null"
    android:textColor="@color/radio2_textcolor"
    android:background="@drawable/radio2"
    android:gravity="center"
    android:layout_weight="1"
    android:text="8" />
</RadioGroup>
	
	<ImageView   
    android:layout_width="fill_parent"  
    android:layout_height="1dp"  
    android:layout_marginTop="15dp"
    android:background="#C0C0C0"/>
	
	<TextView 
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content" 
    android:textSize="20dp"
    
    android:layout_marginTop="10dp"
	android:text="@string/_Volume_Setup"/>
	
	<SeekBar 
    android:id="@+id/volume_seek"
    android:max="4"
    android:progress="0"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:progressDrawable="@drawable/myseekbar"
    android:thumb="@drawable/seedbar_0"
    android:maxHeight="3dp"
    android:minHeight="3dp"    
    android:layout_marginTop="10dp"
    android:thumbOffset="1dp" />
	
	
		
<RelativeLayout   
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="#00000000" >
	<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" 
    android:layout_alignParentLeft="true"
    android:gravity="left" 
    android:text="1" />
	
<LinearLayout   
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_alignParentLeft="true"
	android:background="#00000000" >

	<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal" 
    android:gravity="right" 
    android:text="2" />
	
	<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal" 
    android:gravity="right" 
    android:text="3" />
	
	<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal" 
    android:gravity="right" 
    android:text="4" />
	
	<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal" 
    android:gravity="right" 
    android:text="5" />

</LinearLayout>
</RelativeLayout>
</LinearLayout>
</LinearLayout>

</LinearLayout>

</ScrollView>
</LinearLayout>