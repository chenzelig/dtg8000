<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1dp"
                android:color="#3B5998" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#162982" />
            <stroke
                android:width="1dp"
                android:color="#162982" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>