<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff8c00" />
            <stroke
                android:width="2px"
                android:color="#dcdcdc" />
            <corners
                android:radius="15px" />
            <padding
                android:left="3px"
                android:top="10px"
                android:right="3px"
                android:bottom="10px" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="#ffc2b7" />
            <stroke
                android:width="2px"
                android:color="#dcdcdc" />
            <corners
                android:radius="15px" />
            <padding
                android:left="3px"
                android:top="10px"
                android:right="3px"
                android:bottom="10px" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid
                android:color="#959595" />
            <stroke
                android:width="2px"
                android:color="#ffffff" />
            <corners
                android:radius="15px" />
            <padding
                android:left="3px"
                android:top="10px"
                android:right="3px"
                android:bottom="10px" />
        </shape>
    </item>
</selector>
